                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%"></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.Price.Value.ToString("C")</td>
            <td>@product.DateOfPurchase.Value.ToString("d/M/yyyy")</td>
            <td>@product.AvailabilityStatus</td>
            <td>@(product.Category!=null ? product.Category.CategoryName: "None")</td>
            <td>@(product.Brand!=null ? product.Brand.BrandName: "None")</td>
            <td>@product.Active</td>
            <td>
                <a href="/products/details/@product.ProductID">Details</a> |
                <a href="/products/edit/@product.ProductID">Edit</a> |
                <a href="/products/delete/@product.ProductID">Delete</a>
            </td>
        </tr>
    }
</table>
