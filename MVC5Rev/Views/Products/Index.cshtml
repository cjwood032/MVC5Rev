@model  List<MVC5Rev.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>
<a href="/products/create" class="btn btn-sm btn-success">New Product</a>
<form class="form-inline" action="/products/index">
    <label for="search">Search:</label>
    <input type="search" class="form-control" id="search" name="search" value="@ViewBag.search" />
    <button type="submit" class="btn btn-outline-primary">GO</button>
</form>
<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date of Purchase</th>
        <th>Availability Status</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Active status</th>
    </tr>

    @foreach (var product in Model)
    {
<tr>
    <td><a href="/products/details/@product.ProductID">@product.ProductID</a>
    </td>
    <td>@product.ProductName</td>
    <td>@product.Price</td>
    <td>@product.DateOfPurchase</td>
    <td>@product.AvailabilityStatus</td>
    <td>@(product.Category!=null ? product.Category.CategoryName: "None")</td>
    <td>@(product.Brand!=null ? product.Brand.BrandName: "None")</td>
    <td>@product.Active</td>
</tr>
    }
</table>
