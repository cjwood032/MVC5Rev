@model  MVC5Rev.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Product Details</h2>

<form action="/products/delete/@Model.ProductID" method="post">
    <div class="form-row">
        <div class="form-group">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <a href="/products/edit/@Model.ProductID" class="btn btn-outline-warning">Edit</a>
            <button type="submit" class="btn btn-outline-danger">Delete</button>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>@Model.DateOfPurchase</td>
    </tr>
    <tr>
        <th>Availability Status</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>CategoryID</th>
        <td>@Model.CategoryID</td>
    </tr>
    <tr>
        <th>BrandID</th>
        <td>@Model.BrandID</td>
    </tr>
    <tr>
        <th>Active status</th>
        <td>@Model.Active</td>
    </tr>
</table>
<a href="/products/index">Back to product list</a>